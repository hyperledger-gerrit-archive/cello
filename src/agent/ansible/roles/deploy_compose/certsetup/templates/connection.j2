{
  "name": "first-network",
  "x-type": "hlfv1",
  "version": "1.0.0",
  "channels": {  
    "firstchannel": {
      "orderers": [
{% for orderer in orderers %}
        "{{ orderer.name }}"{{ '' if loop.last else ',' }}
{% endfor %}
      ],
      "peers": {
{% for peer in peers %}
        "{{ peer.name }}": {
        "endorsingPeer": true, "chaincodeQuery": true, "eventSource": true
        }{{ '' if loop.last else ',' }}
{% endfor %}
      }
    }
  },
  "organizations": {
{% for org in allorgs %}
    "{{ org }}": {
      "mspid": "{{ org }}",
      "peers": [
{% for peer in peers|selectattr('org', 'equalto', org)|list %}
        "{{ peer.name }}"{{ '' if loop.last else ',' }}
{% endfor %}
      ],
      "certificateAuthorities": [
{% for ca in cas|selectattr('org', 'equalto', org)|list %}
        "{{ ca.name }}"{{ '' if loop.last else ',' }}
{% endfor %}
      ]
    }{{ '' if loop.last else ',' }}
{% endfor %}
  },
  "orderers": {
{% for orderer in orderers %}
    "{{ orderer.name }}": {
      "url": "grpcs://{{ orderer.name }}:7050",
      "grpcOptions": {
        "ssl-target-name-override": "{{ orderer.name }}"
      },
      "tlsCACerts": {
        "pem": "{{ fabricworkdir+'/keyfiles/'+orderer.org+'/orderers/'+orderer.name+'.'+orderer.org+'/tls/ca.crt' }}"
      }
    }{{ '' if loop.last else ',' }}
{% endfor %}
  },
  "peers": {
{% for peer in peers %}
    "{{ peer.name }}": {
      "url": "grpcs://{{ peer.name }}:7051",
      "eventUrl": "grpcs://{{ peer.name }}:7053",
      "grpcOptions": {
        "ssl-target-name-override": "{{ peer.name }}"
      },
      "tlsCACerts": {
        "pem": "{{ fabricworkdir+'/keyfiles/'+peer.org+'/tlsca/tlsca.'+peer.org+'-cert.pem' }}"
      }
    }{{ '' if loop.last else ',' }}
{% endfor %}
  },
  "certificateAuthorities": {
{% for ca in cas %}
    "{{ ca.name }}": {
      "url": "https://{{ca.name}}:7054",
      "caName": "{{ ca.name }}",
      "httpOptions": {"verify": false}
    }{{ '' if loop.last else ',' }}
{% endfor %}
  }
}
